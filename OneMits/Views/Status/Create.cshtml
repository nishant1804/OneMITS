@model OneMits.Models.Status.AddStatusModel


<div id="tab1" class="w-container  city">
    <div class="set-container">
        <div class="container-contact100">
            <form class="contact100-form validate-form" asp-action="AddStatus" method="post" id="addStatusForm">
                <span class="contact100-post-title">
                    Post Your Question
                </span>

                <div class="wrap-input100 validate-input" data-validate="Name is required">
                    <label class="label-input100" asp-for="StatusTitle">Question Tilte</label>
                    <input class="input100" type="text" asp-for="StatusTitle" placeholder="Enter your Question " required>
                    <span class="focus-input100"></span>
                </div>

                <label asp-for="StatusCategoryId" class="col-md-2 control-label"></label>

                <select  asp-for="StatusCategoryId" asp-items="@(new SelectList(Model.StatusCategory,"StatusCategoryId","StatusCategoryTitle"))" class="form-control" onchange="SetDept()">
                    <option value="0">Please select Department</option>
                </select>

                <button type="submit" value="Submit" id="submitPostBtn" onclick="getOption()" class="contact100-form-btn">
                    <span>
                        Submiit
                        <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                    </span>
                </button>


            </form>
        </div>
        <div id="dropDownSelect1"></div>
    </div>
</div>



@section Scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js">
    </script>

    <script type="text/javascript">
        $(document).ready(() => {
            $("#select option[value=1]").attr('selected', 'selected');
        });
    </script>

}



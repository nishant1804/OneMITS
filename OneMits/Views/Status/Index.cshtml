@model OneMits.Models.Status.StatusIndexModel

<p class="w3-left">
    <a asp-controller="Status" asp-action="Create">
        <button class="w3-button w3-Bpad  w3-white w3-border" onclick="likeFunction(this)">
            <b>
                <i class="fa fa-eye"></i> New
            </b>
        </button>
    </a>

</p>


    @foreach (var status in Model.StatusList)
    {
        <div class="w3-container w3-white w3-margin w3-padding-large Openquestion">
            <a style="text-decoration: none;color:#302b2b" asp-controller="Status"
               asp-action="Index" asp-route-id="@status.StatusId" class="question">
                <h4> @status.StatusTitle</h4>
            </a>

            <div class="w3-row w3-margin-bottom" id="demo1">
                <div class="w3-col l10 m9">
                    <h5>
                        <span>
                            By : <span class="w3-opacity w3-medium">
                                <a asp-controller="Profile" asp-action="Detail" asp-route-id="@status.AuthorId" class="By_color">

                                    @status.AuthorName
                                </a>
                            </span>
                        </span>
                    </h5>
                </div>
            </div>

            <div class="w3-justify">

                <p class="w3-left">
                    <button class="w3-button w3-Bpad  w3-white w3-border" onclick="likeFunction(this)">
                        <b>
                            <i class="fa fa-eye"></i> @status.NumberView
                        </b>
                    </button>
                </p>

                <a class="w3-button w3-right w3-opacity w3-Bpad  w3-white w3-border">
                    <b>
                        <i class="fa fa-history" style="font-size:15px;"></i>&nbsp
                        @status.StatusCreated
                    </b>
                </a>

                <p class="w3-clear"></p>

            </div>

        </div>
        <hr>
    }
  

@section Scripts{
    <script>
        function clearThis(target) {
            target.value = "";
        }</script>
}